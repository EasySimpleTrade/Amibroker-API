function HandleEvents() 
{ 
    for ( n = 0;id = GuiGetEvent( n, 0 );n++ )
    { 
        code = GuiGetEvent( n, 1 ); 

         switch ( id ) 
        { 
             case 1:                                   
             Buy = 1;             
             break; 
             
             case 2: 
             Sell = 1;
             break;              

             case 3:
             Short = 1;
             break; 

             case 4: 
             Cover = 1;
             break; 
             
             case 5: 
             Reset = 1;
             break;                                      
        } 
    } 
} 
