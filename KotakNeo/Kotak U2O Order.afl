//Option Symbol
function OPSYM(iDatafeed,iName,iStrike,iOption,iDate,iWeekly)
{
	//Kotak
	if(iDatafeed == "Kotak")
		{
		FTMM = DateTimeFormat("%#m",iDate);
		result = iName+DateTimeFormat("%y",iDate)+WriteIf(StrToNum(FTMM) > 10, StrLeft( DateTimeFormat("%b",iDate),1),FTMM)+DateTimeFormat("%d",iDate)+iStrike+iOption;
		}
	else 
	//Default
		{
		result = iName+iStrike+iOption;
		}
    return result;    
}

